/*********************************************************************/
/*						   		Use									 */
/*********************************************************************/

make -> compile the files in src

make exeSimulateur1 -> launch the first simulation (carteSujet)
make exeSimulateur2 -> launch the second simulation (desertOfDeath)
make exeSimulateur3 -> launch the third simulation (mushroomOfHell)
make exeSimulateur4 -> launch the fourth simulation (spiralOfMadness)
